#!/bin/bash
# Pre-commit Hook: Ejecuta build_site.py autom√°ticamente antes de cada commit
# Instalaci√≥n: chmod +x .githooks/pre-commit && git config core.hooksPath .githooks

echo "üöÄ Ejecutando Pipeline de Despliegue..."

# Ejecutar script de build
python3 build_site.py

# Verificar si el build fue exitoso
if [ $? -eq 0 ]; then
    echo "‚úÖ Build exitoso - agregando index.min.html al commit"
    git add index.min.html
    exit 0
else
    echo "‚ùå Error en el build - commit cancelado"
    exit 1
fi
